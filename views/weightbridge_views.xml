                <field name="name" />
                <field name="partner_id"/>
                <field name="net_weight" />
                <field name="state"
                    decoration-success="state == 'paid'"
                    decoration-info="state == 'confirmed'"
                    decoration-warning="state == 'to_paid'"
                    widget="badge" optional="show"/>
            </tree>
        </field>
    </record>

